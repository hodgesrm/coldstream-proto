<p>This is the new invoices page</p>
<table class="table">
    <thead>
        <tr>
            <th class="left">Identifier</th>
            <th class="left">Effective Date</th>
            <th class="left">Vendor</th>
            <th style="text-align:right">Subtotal</th>
            <th style="text-align:right">Tax</th>
            <th style="text-align:right">Total</th>
            <th class="left">Currency</th>
        </tr>
    </thead>
    <tbody>
        <tr *ngFor="let invoice of invoices">
            <td class="left">{{invoice.identifier}}</td>
            <td class="left">{{invoice.effective_date}}</td>
            <td class="left">{{invoice.vendor}}</td>
            <td style="text-align:right">{{invoice.subtotal_amount}}</td>
            <td style="text-align:right">{{invoice.tax}}</td>
            <td style="text-align:right">{{invoice.total_amount}}</td>
            <td class="left">{{invoice.currency}}</td>
        </tr>
    </tbody>
</table>
